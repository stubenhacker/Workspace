<Window x:Class="AnimationBall_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationBall_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MouseMove="Window_MouseMove">
    <Canvas Name="myCanvas">
        <Ellipse Width="20" Height="20" Fill="Red" Canvas.Left="200" Canvas.Top="150" Name="ball" />
        <Rectangle Width="10" Height="100" Fill="Aqua" Name="leftPaddle" Canvas.Left="0" Canvas.Top="30"/>
        <Rectangle Width="10" Height="100" Fill="Aqua" Name="rightPaddle" Canvas.Right="0" Canvas.Top="30"/>
    </Canvas>
</Window>
